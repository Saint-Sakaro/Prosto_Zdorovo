# Docker Environment Variables
# Скопируйте этот файл в .env для использования с Docker

# Django настройки
SECRET_KEY=django-insecure-change-me-in-production-docker
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0

# База данных PostgreSQL (используется в Docker)
USE_SQLITE=False
DB_NAME=health_map
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# CORS настройки (для React фронтенда)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://frontend:80

# Celery (Redis)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Настройки модуля геймификации
UNIQUENESS_RADIUS_METERS=50
UNIQUENESS_TIME_WINDOW_HOURS=24
POINTS_TO_REPUTATION_RATE=0.1
MONTHLY_LEADERBOARD_TOP_N=10
POINTS_FOR_UNIQUE_REVIEW=100
POINTS_FOR_DUPLICATE=10
REPUTATION_FOR_UNIQUE_REVIEW=50
REPUTATION_PENALTY_FOR_SPAM=20
SPAM_THRESHOLD_FOR_BAN=5

# Яндекс Geocoder API (опционально)
YANDEX_GEOCODER_API_KEY=your-yandex-geocoder-api-key-here

# OpenSearch настройки (опционально)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=False
OPENSEARCH_VERIFY_CERTS=True
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=OpenSearch2024!@#

# GIGACHAT LLM настройки (опционально)
GIGACHAT_CLIENT_ID=your-gigachat-client-id
GIGACHAT_CLIENT_SECRET=your-gigachat-client-secret
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_MODEL=GigaChat
