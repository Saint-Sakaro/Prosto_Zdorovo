# Development Dockerfile для React с hot-reload
FROM node:18-alpine

WORKDIR /app

# Копирование package файлов
COPY package*.json ./

# Установка зависимостей
RUN npm install --legacy-peer-deps

# Копирование исходного кода
COPY . .

# Открытие порта
EXPOSE 3000

# Запуск dev сервера
CMD ["npm", "start"]

