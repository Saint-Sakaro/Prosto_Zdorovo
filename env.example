# Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните реальными значениями

# Django настройки
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# База данных PostgreSQL
DB_NAME=health_map
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# CORS настройки (для React фронтенда)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Celery (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Настройки модуля геймификации
UNIQUENESS_RADIUS_METERS=50
UNIQUENESS_TIME_WINDOW_HOURS=24
POINTS_TO_REPUTATION_RATE=0.1
MONTHLY_LEADERBOARD_TOP_N=10
POINTS_FOR_UNIQUE_REVIEW=100
POINTS_FOR_DUPLICATE=10
REPUTATION_FOR_UNIQUE_REVIEW=50
REPUTATION_PENALTY_FOR_SPAM=20
SPAM_THRESHOLD_FOR_BAN=5

# Яндекс Geocoder API
YANDEX_GEOCODER_API_KEY=your-yandex-geocoder-api-key-here

